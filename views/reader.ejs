<html>
  <head>
  <title>Scriblr Reader</title>
  <link rel="stylesheet" type="text/css" href="slick/slick.css"/>
  <link rel="stylesheet" type="text/css" href="slick/slick-theme.css"/>
  <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/styles.css">
      <meta charset="UTF-8">

  </head>
  <body>

    <div class="reader-box">

         <a href="/"><img id="reader-logo" src="posters/logo.png"></a>

            <div id="reader-sections-dropdown"> <span class="bold">Section <%= episode.episodeNo %>: </span><%= episode.title %> <img class="browse-icons" src="icons/downarrow.png">
        <div class="reader-section-dropdown-content">
        <p class="section-element bold"> Sections</p>

          <% episodes.forEach(function(episode){ %>
            <div class="reader-section-list-element">
                <div class="reader-section-list-title"><span class="bold"><%= episode.episodeNo %>: </span><a class="reader-section-links" href="/reader/<%= bookID %>/<%= episode.episodeNo %>"><%= episode.title %></a></div>
            </div>
          <% }); %>
         </div>
        </div>


                    <div id="reader-options-dropdown"> <span class="bold">Options </span><img class="browse-icons" src="icons/downarrow.png">
        <div class="reader-option-dropdown-content">

            <div class="reader-option-list-element">
                <div class="reader-section-list-title"><a class="reader-section-links" href="#"><i class="fa fa-info-circle" aria-hidden="true"></i>About Story</a></div>


            </div>

              <div class="reader-option-list-element">
                <div class="reader-section-list-title"><a class="reader-section-links" href="#"><i class="fa fa-bookmark-o" aria-hidden="true"></i>Bookmark</a></div>


            </div>

              <div class="reader-option-list-element">
                <div class="reader-section-list-title"><a class="reader-section-links" href="#"><i class="fa fa-search" aria-hidden="true"></i>Search</a></div>

            </div>

              <div class="reader-option-list-element">
               <div class="reader-section-list-title"><a class="reader-section-links" href="#"><i class="fa fa-arrows-alt" aria-hidden="true"></i>Toggle Fullscreen</a></div>


            </div>
         </div>
        </div>
    <div class="reader-section-no"> Section <%= episode.episodeNo %> </div>
    <div class="reader-section-title"><%= episode.title %></div>
    <%
      var previousEpisodeNo = episode.episodeNo - 1;
      var nextEpisodeNo = episode.episodeNo + 1;
    %>
    <% if(episode.episodeNo != 1){ %><a class="prev-section-align" href="/reader/<%= bookID %>/<%= previousEpisodeNo %>"> Previous Section</a><% } %>
    <% if(episode.episodeNo != episodes.length){ %><a class="next-section-align" href="/reader/<%= bookID %>/<%= nextEpisodeNo %>"> Next Section</a><% } %>
        <div class="reader-content">

        <p class="seventeen"><%- episode.content %></p>

        </div>

      <% if(episode.episodeNo != 1){ %><a class="prev-section-align down-ones-positioning" href="/reader/<%= bookID %>/<%= previousEpisodeNo %>"> Previous Section</a><% } %>
      <% if(episode.episodeNo != episodes.length){ %><a class="next-section-align down-ones-positioning" href="/reader/<%= bookID %>/<%= nextEpisodeNo %>"> Next Section</a><% } %>

    </div>

<% include partials/footer %>
